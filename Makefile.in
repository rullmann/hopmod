BJAM=bin/bjam
USER_CONFIG="--user-config=user-config.jam"

all: .dummy
	@$(BJAM) release optimization=off $(USER_CONFIG)

debug: .dummy
	@$(BJAM) debug $(USER_CONFIG)

authserver: .dummy
	@$(BJAM) sauer_authserver install_sauer_authserver $(USER_CONFIG)

clean: .dummy
	@$(BJAM) clean $(USER_CONFIG)

distclean: clean
	rm -rf Jamfile Makefile config.log

.dummy:
